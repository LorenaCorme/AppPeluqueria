@helper img_link(System.Web.Mvc.UrlHelper url, string archivo, string controlador, string accion)
    {

        string imagen = url.Content("~/Content/img/" + archivo);
        @: <a href="@url.Action(@accion,@controlador)">  <img alt="" src="@imagen" /> </a>
}

@helper tag_link(System.Web.Mvc.UrlHelper url, string titulo, string controlador, string accion)
    {
        @: <a href="@url.Action(@accion,@controlador)"> @titulo </a>
}

@helper img(System.Web.Mvc.UrlHelper url, string archivo)
    {

        string imagen = url.Content("~/Content/img/" + archivo);
        @: <img alt="" src="@imagen" />
}

