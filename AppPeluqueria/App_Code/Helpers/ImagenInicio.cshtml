@helper btn_link(System.Web.Mvc.UrlHelper url, string titulo, string controlador, string accion)
    {

        @: <input type="button" value="@titulo" onclick="location.href='@url.Action(accion, @controlador)'" />
}

@helper btn_link_id(System.Web.Mvc.UrlHelper url, string titulo, string controlador, string accion, object obj)
    {

        @: <input type="button" value="@titulo" onclick="location.href='@url.Action(@accion, @controlador, @obj)'" />
}