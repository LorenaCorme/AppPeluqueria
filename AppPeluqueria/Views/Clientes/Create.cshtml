@model AppPeluqueria.Models.Clientes.mCliente

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container-fluid">
            <div class="col-md-6">
                <div class="card-header">
                    <h4 class="card-title"> Añadir un Cliente </h4>
                </div>

                <div class="card">
                    <div class="form-group" style="margin-top:20px">

                        <span style="margin-left:20px"> @Html.Label("Dni del Cliente") </span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.dni_Cli, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dni_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px"> @Html.Label("Nombre del Cliente") </span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.nombre_Cli, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px">@Html.Label("Apellidos del Cliente") </span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.apell_Cli, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.apell_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px">@Html.Label("Dirección del Cliente")</span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.dir_Cli, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dir_Cli, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px">@Html.Label("Nombre del Peluquero")</span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.DropDownList("dni_Pel", null, "-- Selecciona un peluquero--", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.dni_Pel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Añadir" class="btn btn-default" />
                        </div>
                    </div>

                    <div>
                        <span style="margin-left:20px">  @Html.ActionLink("Mostrar lista de Clientes", "Index") </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}