@model AppPeluqueria.Models.BD.Reservas
@{
    ViewBag.Title = "Editar Reserva";
}

<br />
<h3 style="margin-left:40px"> Datos de la Reserva a Modificar </h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.num_Res)

        <div class="form-group">
            <span style="margin-left:40px"> @Html.Label("Id del Producto") </span>
            <div class="col-md-10" style="margin-left:25px">
                @Html.DropDownList("id_Prod", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span style="margin-left:40px"> @Html.Label("Cantidad del Producto") </span>
            <div class="col-md-10" style="margin-left:25px">
                @Html.DropDownList("cantidad", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-actions no-color" style="margin-left:40px">
            <input type="submit" value="Guardar" class="btn btn-default" />
            <br />
            <br />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
