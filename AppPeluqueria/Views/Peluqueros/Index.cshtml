@model IEnumerable<AppPeluqueria.Models.Peluqueros.InfoPeluquero>

@{
    ViewBag.Title = "Peluqueros";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="col-md-7">
            <div class="card-header">
                <h2 class="card-title"> Datos de los Peluqueros </h2>
            </div>

            <div class="card">
                <div class="form-group">

                    <table class="table">
                        <tr>
                            <th>
                                <span> @Html.Label("Dni del Peluquero") </span>
                            </th>
                            <th>
                                <span> @Html.Label("Nombre del Peluquero") </span>
                            </th>
                            <th>
                                <span> @Html.Label("Apellido del Peluquero") </span>
                            </th>

                            <th>
                                <span> @Html.Label("Dirección del Peluquero") </span>
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dni_Pel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre_Pel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.apell_Pel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dir_Pel)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.dni_Pel }) |
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.dni_Pel })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
