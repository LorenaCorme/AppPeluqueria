@model AppPeluqueria.Models.Peluqueros.mPeluquero

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container-fluid">
            <div class="col-md-6">
                <div class="card-header">
                    <h4 class="card-title"> Añadir un Peluquero </h4>
                </div>
                <div class="card">
                    <div class="form-group" style="margin-top:20px">
                        <span style="margin-left:20px"> @Html.Label("Dni del Peluquero") </span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.dni_Pel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dni_Pel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px"> @Html.Label("Nombre del Peluquero") </span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.nombre_Pel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre_Pel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px">@Html.Label("Apellidos del Peluquero") </span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.apell_Pel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.apell_Pel, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="margin-left:20px">@Html.Label("Dirección del Peluquero")</span>
                        <div class="col-md-10" data-val-required="Campo requerido">
                            @Html.EditorFor(model => model.dir_Pel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dir_Pel, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Añadir" class="btn btn-default" />
                        </div>
                    </div>

                    <div>
                        <span style="margin-left:20px">  @Html.ActionLink("Mostrar lista de Peluqueros", "Index") </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
